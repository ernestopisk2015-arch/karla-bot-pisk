const { default: makeWASocket, useMultiFileAuthState } = require('@whiskeysockets/baileys');
const qrcode = require('qrcode-terminal');
const Groq = require('groq-sdk');
const http = require('http');

// Servidor para Railway
http.createServer((req, res) => { res.end("Karla Online"); }).listen(process.env.PORT || 8080);

const groq = new Groq({ apiKey: process.env.GROQ_API_KEY });

async function conectarWA() {
    // CAMBIAMOS EL NOMBRE AQUÃ PARA BORRAR LA MEMORIA TRABADA
    const { state, saveCreds } = await useMultiFileAuthState('sesion_nueva_total');
    
    const sock = makeWASocket({
        auth: state,
        browser: ["Karla Bot", "Chrome", "1.0.0"],
        logger: require('pino')({ level: 'silent' })
    });

    sock.ev.on('creds.update', saveCreds);

    sock.ev.on('connection.update', (update) => {
        const { connection, qr } = update;
        
        // MENSAJE DE CONTROL PARA SABER QUE LLEGAMOS AQUÃ
        console.log("ESTADO DE CONEXIÃ“N:", connection);

        if (qr) {
            console.log("\n--- â¬‡ï¸ CÃ“DIGO QR DETECTADO - ESCANEA YA â¬‡ï¸ ---");
            qrcode.generate(qr, { small: true });
            console.log("--- â¬†ï¸ SI NO VES UN CUADRADO, ALEJA EL ZOOM â¬†ï¸ ---\n");
        }
        
        if (connection === 'open') console.log("âœ… KARLA VIVA!");
    });

    sock.ev.on('messages.upsert', async ({ messages }) => {
        // ... (resto del cÃ³digo de mensajes)
    });
}
console.log("ğŸš€ Iniciando sistema de Karla...");
conectarWA();
